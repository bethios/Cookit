
<div class="row">
  <div class="col-md-4">
    <p>Guidelines for recipes</p>
    <ul>
      <li>Feel free to include pictures of the dish or the family member.</li>
      <li>Absolutely include instructions like grandma would give them.</li>
    </ul>
    <br>
    <table>
      <tr>
        <th>Style</th>
        <th>Markdown Syntax</th>
      </tr>
      <tr>
        <td>Autolink</td>
        <td>< ></td>
      </tr>
      <tr>
        <td>Bold</td>
        <td>**word**</td>
      </tr>
      <tr>
        <td>Heading</td>
        <td>###heading</td>
      </tr>
      <tr>
        <td>Small Heading</td>
        <td>####heading</td>
      </tr>
      <tr>
        <td>Image</td>
        <td>![](url)</td>
      </tr>
      <tr>
        <td>Italics</td>
        <td>_word_</td>
      </tr>
      <tr>
        <td>Bullet List</td>
        <td>* or -</td>
      </tr>

    </table>

  </div>

  <div class="col-md-8">
    <%= form_for [topic, post] do |f| %>
        <% if post.errors.any? %>
            <div class="alert alert-danger">
              <h4><%= pluralize(post.errors.count, "error") %>.</h4>
              <ul>
                <% post.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
        <%= form_group_tag(post.errors[:title]) do %>
            <%= f.label :title %>
            <%= f.text_field :title, class: 'form-control', placeholder: "Enter recipe title" %>
        <% end %>
        <%= form_group_tag(post.errors[:body]) do %>
            <%= f.label :body %>
            <%= f.text_area :body, rows: 17, class: 'form-control', placeholder: "Enter recipe body" %>
        <% end %>
        <div class="form-group">
          <%= f.submit "Save", class: 'btn btn-success' %>
        </div>
    <% end %>
  </div>
</div>
