<div class="row">
  <div class="col-md-4">
    <p>Guidelines for dishes:</p>
    <ul>
      <li>Make sure the dish isn't a duplicate.</li>
      <li>Keep grandma's name out of the Dish, save that for the recipes!</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @topic do |f| %>
        <% if topic.errors.any? %>
            <div class="alert alert-danger">
              <h4><%= pluralize(topic.errors.count, "error") %>.</h4>
              <ul>
                <% topic.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
        <%= form_group_tag(topic.errors[:name]) do %>
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control', placeholder: "Enter dish name" %>
        <% end %>
        <%= form_group_tag(topic.errors[:description]) do %>
            <%= f.label :description %>
            <%= f.text_area :description, rows: 4, class: 'form-control', placeholder: "Enter dish description. What country is it from? What are the traditional ingredients? Techniques?" %>
            <div class="form-group">
              <%= f.label :public, class: 'checkbox' do %>
                  <%= f.check_box :public %> Public dish
              <% end %>
            </div>
            <%= f.submit "Save", class: 'btn btn-success' %>
        <% end %>
    <% end %>
  </div>
</div>



